{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"]

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}